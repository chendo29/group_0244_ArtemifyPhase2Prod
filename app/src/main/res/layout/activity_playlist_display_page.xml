<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.artemifyMusicStudio.PlaylistDisplayPage">


    <TextView
        android:id="@+id/playlist_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="91dp"
        android:text="Playlist Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/like_playlist"
        android:layout_width="84dp"
        android:layout_height="85dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="27dp"
        android:text="Like playlist"
        android:adjustViewBounds="true"
        android:drawableTop="@drawable/like_button"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/play_playlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playlist_name_display" />

    // need to find a picture for this button

    <Button
        android:id="@+id/play_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="48dp"
        android:text="Play playlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/like_playlist"
        app:layout_constraintTop_toBottomOf="@+id/playlist_name_display" />

    <TextView
        android:id="@+id/creator_info_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="160dp"
        android:text="Creator Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/like_playlist" />

    <Button
        android:id="@+id/view_playlist_songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="67dp"
        android:text="View Playlist Songs"
        app:layout_constraintBottom_toTopOf="@+id/view_creator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creator_info_display" />

    <Button
        android:id="@+id/view_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="133dp"
        android:text="View Creator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_playlist_songs" />



</androidx.constraintlayout.widget.ConstraintLayout>